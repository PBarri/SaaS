-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating, v|
    = rating
    = check_box_tag "ratings[#{rating}]", "ratings[#{rating}]", v
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => @titleClass}
        = sortable "title"
      %th Rating
      %th{:class => @releaseClass}
        = sortable "release_date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie, :sort => @sort, :direction => @direction, :ratings => @ratings)

= link_to 'Add new movie', new_movie_path
